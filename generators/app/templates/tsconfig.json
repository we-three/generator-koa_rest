{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "compiled",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"]
}
